generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String              @id @default(uuid())
  firebaseUid      String              @unique
  name             String
  email            String              @unique
  phone            String?
  role             UserRole            @default(parent)
  street           String?
  city             String?
  state            String?
  zipCode          String?
  accountCreatedAt DateTime            @default(now())
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  auditLogs        AuditLog[]
  checkins         Checkin[]           @relation("VolunteerCheckins")
  children         Child[]             @relation("ParentChildren")
  deposits         TokenDeposit[]
  vendorTurnins    VendorTokenTurnin[] @relation("VendorTurnins")
  verifiedTurnins  VendorTokenTurnin[] @relation("VerifiedTurnins")
}

model Child {
  id             String         @id @default(uuid())
  parentId       String
  name           String
  createdAt      DateTime       @default(now())
  dateOfBirth    DateTime?
  timesCheckedIn Int            @default(0)
  gender         Gender
  balance        Balance?
  checkins       Checkin[]
  parent         User           @relation("ParentChildren", fields: [parentId], references: [id])
  deposits       TokenDeposit[]
  transactions   Transaction[]

  @@index([parentId])
}

model Balance {
  id          String    @id @default(uuid())
  childId     String    @unique
  amountCents Int       @default(0)
  lastCheckin DateTime?
  updatedAt   DateTime  @default(now())
  child       Child     @relation(fields: [childId], references: [id])
}

model Checkin {
  id          String   @id @default(uuid())
  childId     String
  volunteerId String?
  checkinTime DateTime @default(now())
  checkinDate DateTime
  child       Child    @relation(fields: [childId], references: [id])
  volunteer   User?    @relation("VolunteerCheckins", fields: [volunteerId], references: [id])

  @@unique([childId, checkinDate])
  @@index([childId])
}

model Transaction {
  id          String          @id @default(uuid())
  childId     String
  type        TransactionType
  amountCents Int
  description String?
  createdAt   DateTime        @default(now())
  child       Child           @relation(fields: [childId], references: [id])

  @@index([childId])
}

model TokenDeposit {
  id             String   @id @default(uuid())
  childId        String
  volunteerId    String?
  tokensReturned Int
  createdAt      DateTime @default(now())
  child          Child    @relation(fields: [childId], references: [id])
  volunteer      User?    @relation(fields: [volunteerId], references: [id])

  @@index([childId])
}

model VendorTokenTurnin {
  id              String   @id @default(uuid())
  vendorId        String
  tokensSubmitted Int
  marketDate      DateTime
  verifiedBy      String?
  createdAt       DateTime @default(now())
  vendor          User     @relation("VendorTurnins", fields: [vendorId], references: [id])
  verifiedByUser  User?    @relation("VerifiedTurnins", fields: [verifiedBy], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String?
  entityId  String?
  details   Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

enum UserRole {
  parent
  volunteer
  vendor
  admin
}

enum TransactionType {
  credit
  withdrawal
  deposit
}

enum Gender {
  MALE
  FEMALE
  OTHER
}